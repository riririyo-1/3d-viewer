# -- Database --------------
DATABASE_URL=postgresql://user:password@localhost:5432/studio_view

# -- Redis --------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -- MinIO (S3-compatible Storage) --------------
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=studio-view-assets

# -- Pipeline API --------------
PIPELINE_API_URL=http://localhost:8000

# -- JWT --------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -- Server --------------
PORT=4000

# -- CORS設定 --------------
# カンマ区切りで複数のオリジンを許可可能 例: http://localhost:3000,http://100.76.140.55:3000
# ワイルドカード使用可: http://100.76.140.*:3000
CORS_ORIGINS="http://localhost:3000,http://100.94.69.71:3000"

# -- Google OAuth --------------
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# リダイレクト先のフロントエンドURL
FRONTEND_URL=http://localhost:3000